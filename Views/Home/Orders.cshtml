@model System.Data.DataTable
@{
    ViewData["Title"] = "Заказы";
}
<form method="post">
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Номер</td>
                <td>Номер пользователя</td>
                <td>Общая сумма</td>
                <td>Дата заказа</td>
                <td>Обновить данные</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>@Model.Rows[i][0]</td>
                    <td><input type="text" name="UserId" value="@Model.Rows[i][1]" /></td>
                    <td><input type="text" name="TotalPrice" value="@Model.Rows[i][2]" /></td>
                    <td><input type="date" name="DateOfOrder" value="@Model.Rows[i][3]" /></td>
                    <td><button type="submit" name="Id" value="@Model.Rows[i][0]">Изменить</button></td>
                </tr>
            }
        </tbody>
    </table>
</form>